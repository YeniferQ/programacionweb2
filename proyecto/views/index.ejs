<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/HF.css">
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>

    <%- include('partials/header') %>

    <main class="login-wrapper">
        
        <div class="login-card">
            <h1>Login de aplicación</h1>

            <% if (typeof message != 'undefined') { %>
                <div class="alert-error">
                    <%= message %>
                </div>
            <% } %>

            <form action="/log" method="post">
                <div class="form-group">
                    <label for="email">Correo</label>
                    <input type="email" id="email" name="email" class="form-input" placeholder="ejemplo@correo.com" required>
                </div>

                <div class="form-group">
                    <label for="contraseña">Contraseña</label>
                    <input type="password" id="contraseña" name="contraseña" class="form-input" placeholder="••••••••" required>
                </div>

                <button type="submit" class="btn-login">Iniciar Sesión</button>
            </form>
        </div>

    </main>

    <%- include('partials/footer') %>

</body>
</html>